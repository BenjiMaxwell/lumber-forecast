# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/lumberflow

# JWT Configuration
JWT_SECRET=lumberflow-super-secret-key-change-in-production-please
JWT_EXPIRES_IN=7d

# Email Configuration (for Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
ALERT_EMAIL=purchaser@yourcompany.com

# AI/ML Configuration
MODEL_RETRAIN_SCHEDULE=0 0 * * 0
FORECAST_DAYS=45
SEQUENCE_LENGTH=12

# Seasonal Configuration (month numbers, 1-12)
BUSY_SEASON_START=4
BUSY_SEASON_END=10

# Stock Thresholds
MIN_DAYS_SUPPLY=30
TARGET_DAYS_SUPPLY=45
